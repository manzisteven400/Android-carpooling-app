<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/layout_header_activity" />
	    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"                
        android:layout_marginTop="@dimen/space_small"
        android:orientation="horizontal"
        android:paddingRight="@dimen/space_small"
        android:weightSum="2" >

        <LinearLayout
            android:id="@+id/btn_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="@dimen/space_tiny"
            android:weightSum="10" >

            <com.pt.taxi.widget.TextViewFontAwesome
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="@string/ic_blance"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal" />

            <com.pt.taxi.widget.TextViewRaleway
                android:id="@+id/lbl_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8.5"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:text="Your Balance"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <com.pt.taxi.widget.TextViewRaleway
            android:id="@+id/lbl_Balance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center_vertical|right"
            android:text="3000"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"                
        android:layout_marginTop="@dimen/space_small"
        android:orientation="horizontal"
        android:paddingRight="@dimen/space_small"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="@dimen/space_tiny"
            android:weightSum="10" >

            <com.pt.taxi.widget.TextViewFontAwesome
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="@string/ic_user"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal" />

            <com.pt.taxi.widget.TextViewRaleway
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8.5"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:text="Beneficiary ID"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <EditText
            android:id="@+id/lblTransferId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_textbox_black"
            android:padding="@dimen/padding_vertical"
            android:gravity="center_vertical|right"
            android:hint="Enter transfer Id"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"                
        android:layout_marginTop="@dimen/space_small"
        android:orientation="horizontal"
        android:paddingRight="@dimen/space_small"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="@dimen/space_tiny"
            android:weightSum="10" >

            <com.pt.taxi.widget.TextViewFontAwesome
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="@string/ic_point"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal" />

            <com.pt.taxi.widget.TextViewRaleway
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8.5"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:text="Points"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <EditText
            android:id="@+id/lbl_Point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_textbox_black"
            android:padding="@dimen/padding_vertical"
            android:gravity="center_vertical|right"
            android:hint="0"
            android:textColorHint="@color/black"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_vertical_large"
        android:layout_marginBottom="@dimen/margin_vertical"
        android:text="@string/lbl_note"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_small"
        android:textStyle="italic" />
	<TextView
        android:id="@+id/btnContinue"
        android:layout_marginTop="@dimen/space_normal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_paypal_yl"
        android:layout_marginLeft="@dimen/margin_horizontal_xxlarge"
        android:layout_marginRight="@dimen/margin_horizontal_xxlarge"
        android:gravity="center"
        android:text="@string/lbl_contiune"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large"
        android:paddingBottom="@dimen/padding_small" 
        android:layout_marginBottom="@dimen/margin_vertical_large"/>
	
	<TextView
        android:id="@+id/lbl_Error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/margin_horizontal_large"
        android:layout_marginRight="@dimen/margin_horizontal_large"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large" 
        android:layout_marginBottom="@dimen/margin_vertical_large"/>
	
</LinearLayout><!-- From: file:/D:/backup01/Full_Stack_Web_dev/AndroidStudioProjects/Taxi/Taxi/app/src/main/res/layout/activity_payment_transfers.xml -->